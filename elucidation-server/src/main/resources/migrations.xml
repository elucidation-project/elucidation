<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <changeSet id="1" author="crohr">
    <createTable tableName="connection_events">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="service_name" type="text">
        <constraints nullable="false"/>
      </column>
      <column name="event_direction" type="text">
        <constraints nullable="false"/>
      </column>
      <column name="communication_type" type="text">
        <constraints nullable="false"/>
      </column>
      <column name="connection_identifier" type="text">
        <constraints nullable="false"/>
      </column>
      <column name="rest_method" type="text"/>
      <column name="observed_at" type="timestamp without timezone">
          <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="2" author="crohr">
    <modifyDataType tableName="connection_events" columnName="service_name" newDataType="varchar(255)"/>
    <modifyDataType tableName="connection_events" columnName="event_direction" newDataType="varchar(10)"/>
    <modifyDataType tableName="connection_events" columnName="communication_type" newDataType="varchar(25)"/>
    <modifyDataType tableName="connection_events" columnName="connection_identifier" newDataType="varchar(255)"/>
    <modifyDataType tableName="connection_events" columnName="rest_method" newDataType="varchar(10)"/>
    <modifyDataType tableName="connection_events" columnName="observed_at" newDataType="bigint"/>

    <createIndex tableName="connection_events" indexName="connection_events_service_name">
      <column name="service_name"/>
    </createIndex>

    <createIndex tableName="connection_events" indexName="connection_events_event_direction">
      <column name="event_direction"/>
    </createIndex>

    <createIndex tableName="connection_events" indexName="connection_events_communication_type">
      <column name="communication_type"/>
    </createIndex>

    <createIndex tableName="connection_events" indexName="connection_events_connection_identifier">
      <column name="connection_identifier"/>
    </createIndex>

    <createIndex tableName="connection_events" indexName="connection_events_observed_at">
      <column name="observed_at"/>
    </createIndex>
  </changeSet>

</databaseChangeLog>
